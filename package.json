{
  "name": "headacher",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "npm run build && vite preview",
    "deploy": "npm run build && wrangler deploy",
    "cf-typegen": "wrangler types",
    "db:migrate": "wrangler d1 execute headacher --file migrations/0001_initial_with_users.sql --local",
    "db:schema": "wrangler d1 execute headacher --file worker/schema.sql --local",
    "db:seed": "wrangler d1 execute headacher --file worker/seed.sql --local",
    "test": "vitest run",
    "test:watch": "vitest run --watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@lit/reactive-element": "2.1.1",
    "@reown/appkit": "^1.7.19",
    "@reown/appkit-adapter-wagmi": "^1.7.19",
    "@tailwindcss/vite": "^4.1.11",
    "@tanstack/query-core": "5.83.1",
    "@wagmi/core": "2.19.0",
    "@walletconnect/modal": "^2.7.0",
    "buffer": "^6.0.3",
    "ethers": "6.15.0",
    "firebase": "^12.2.1",
    "hono": "^4.9.7",
    "jose": "6.0.12",
    "lit": "3.3.0",
    "lit-element": "4.2.1",
    "lit-html": "3.3.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^6.30.1",
    "recharts": "^3.1.2",
    "siwe": "3.0.0",
    "viem": "2.33.3",
    "wagmi": "^2.16.2"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.11.2",
    "@eslint/js": "^9.30.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/ui": "^3.2.4",
    "c8": "^10.1.3",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "tailwindcss": "^4.1.11",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.1.5",
    "vitest": "^3.2.4",
    "wrangler": "^4.28.1"
  }
}
